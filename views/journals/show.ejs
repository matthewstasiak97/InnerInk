<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= journal.title %> â€“ Journal</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <% if (user) { %>
    <nav style="margin-bottom: 1rem">
      <a href="/auth/sign-out">ğŸšª Sign out</a>
    </nav>
    <% } %>

    <h1><%= journal.title %></h1>

    <% if (journal.description) { %>
    <p><%= journal.description %></p>
    <% } %>

    <a href="/entries/new?journalId=<%= journal._id %>" class="button"
      >â• Add Entry</a
    >

    <% if (entries.length > 0) { %>
    <ul class="entry-list">
      <% entries.forEach(entry => { %>
      <li>
        <a href="/entries/<%= entry._id %>"><%= entry.title %></a>
        <small><%= entry.createdAt.toDateString() %></small>

        <a href="/entries/<%= entry._id %>/edit" class="button small"
          >âœï¸ Edit</a
        >
      </li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>No entries yet. Create one!</p>
    <% } %>

    <a href="/journals/<%= journal._id %>/edit" class="button"
      >ğŸ›  Edit Journal</a
    >
  </body>
</html>
